<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.feri.um.si.musicbox.PrijavaActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_above="@+id/editTextUporabniškoIme"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/editTextUporabniškoIme"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:hint="Uporabniško ime"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editTextGeslo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editTextUporabniškoIme"
        android:layout_alignStart="@+id/editTextUporabniškoIme"
        android:layout_below="@+id/editTextUporabniškoIme"
        android:layout_marginTop="24dp"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:hint="Geslo"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonRegistracija"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/editTextGeslo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="Registriraj" />

    <TextView
        android:id="@+id/textViewPrijavljanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRegistracija"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Prijavi se tukaj." />


</RelativeLayout>

