<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vrstica_slika"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/ime_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/vrstica_slika"
                android:textSize="50sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" >

            <Button
                android:id="@+id/posodobi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:text="Posodobi email"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/sprgeslo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Spremeni geslo"
                android:layout_below="@+id/posodobi"
                android:background="@color/colorPrimary"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/deaktiviraj"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Deaktiviraj"
                android:layout_below="@+id/sprgeslo"
                android:background="@color/colorPrimary"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/nazaj"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Nazaj"
                android:layout_below="@+id/deaktiviraj"
                android:background="@color/colorPrimary"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>

